/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  text-align: center;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  background-color: rgba(240, 240, 240, .5);
}
.navbar{
  position: absolute;
  left: 0;
  top: 20px;
  width: 100%;
  z-index: 10;
  color: white;
  letter-spacing: 8rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 24px;
}
.image-swiper{
  flex: 1;
  width: 100%;
  height: 100vh;
}
.slide-image{
  width: 100%;
  height: 100vh;
}
.text-wrapper{
  position: absolute;
  left: 95rpx;
  width: 560rpx;
  height: 130px;
  padding: 20rpx;
  z-index: 10;
  bottom: 20px;
  color: rgba(7,17,27,.9);
  font-size: 16px;
  box-sizing: border-box;
  border: 10rpx solid rgba(248,248,248,.5);
  background-color: rgba(255, 255, 255, .3);
  border-image: url('~/../../images/message.png');
  animation: easein 10s ease-in-out infinite;
}
.name,.date,.action,.address {
  display: block;
}
.name{
  color: black;
  font-size: 20px;
  margin-bottom: 10px;
}
.date{
  font-size: 10px;
}
.action{
  margin: 10px 0;
  letter-spacing: 2px;
  color: #F56C6C;
}
.address{
  font-size: 10px;
}

@keyframes easein {
  0%{
    transform: scale(1)
  }
  50%{
    transform: scale(1.1)
  }
  100%{
    transform: scale(1)
  }
}